  },
  "scripts": {
    "ts.check": "tsc --project tsconfig.json",
    "build": "rimraf dist && tsc",
    "add-build": "git add dist",
    "start": "node --env-file=.env src/index.ts",
    "dev": "node --env-file=.env --watch src/index.ts",
    "prisma:init": "npx prisma migrate dev --name init",
    "prisma:format": "npx prisma format && npx prisma db push",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:seed": "npx prisma db seed"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "prisma": {
    "seed": "node prisma/seed"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
